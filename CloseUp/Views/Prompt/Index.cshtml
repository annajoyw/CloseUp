@model IEnumerable<CloseUp.Models.PromptListItem>
<link href="@Url.Content("~/Content/PromptIndex.css")" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}
<div class="head">
    <h2>Prompt Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
</div>

<br />

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Prompt)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Prompt)
            </td>
            <td>
                @Html.ActionLink("Answer", "../JournalEntry/Create", new { id = item.PromptId }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.PromptId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PromptId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PromptId })
            </td>
        </tr>
    }

</table>
